#Makefile with more variables and rules
#CC is the compiler
#SRC are the .c files
#OBJ are the .o files
#NAME is the executable name
#CFLAGS are the flags for the compiler
CC=gcc
SRC=holberton.c main.c
OBJ=$(SRC:.c=.o)
NAME=holberton
RM=rm -f
CFLAGS=-Wall -Wextra -Werror -pedantic
all : $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean:	clean oclean

re: oclean all